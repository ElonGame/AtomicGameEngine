<renderpath>
    <rendertarget name="occlusionRT" sizedivisor="4 4" format="rgba" filter="true" />
    <rendertarget name="godraysRT" sizedivisor="4 4" format="rgba" filter="true" />
    
    <command type="quad" tag="GodRays" vs="CopyFramebuffer" ps="CopyFramebuffer" blend="replace" output="occlusionRT">
        <texture unit="emissive" name="occlusion" />
    </command>
    
    <command type="quad" tag="GodRays" vs="GodRays" ps="GodRays" blend="replace" output="godraysRT">
        <parameter name="Exposure" value="1.0" />
        <parameter name="Decay" value="0.98" />
        <parameter name="Density" value="1.0" />
        <parameter name="Weight" value="0.01" />
        <parameter name="LightPositionOnScreen" value="0 0" />
        <texture unit="diffuse" name="occlusionRT" />
    </command>
    
    <command type="quad" tag="GodRays" vs="CopyFramebuffer" ps="CopyFramebuffer" blend="add" output="viewport">
        <texture unit="diffuse" name="godraysRT" />
    </command>
    
</renderpath>