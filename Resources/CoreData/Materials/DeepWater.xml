<!-- Based on Materials/Water.xml -->
<material>
    <!-- The water example will assign the reflection texture to the diffuse unit -->
    <!-- The engine will automatically assign the refraction (viewport) texture to the environment unit during refract pass -->
    <technique name="Techniques/DeepWater.xml" />
    <texture unit="normal" name="Textures/WaterNoise.dds" />
    <texture unit="emissive" name="Textures/foam.dds" />
    <parameter name="NoiseSpeed" value="0.02 0.012" />
    <parameter name="NoiseTiling" value="10" />
    <parameter name="NoiseStrength" value="0.2" />
    <parameter name="FresnelPower" value="14" />
    <parameter name="ShallowColor" value="1.0 1.0 1.0" />
    <parameter name="DeepColor" value="0.0 0.13 0.1" />
    <parameter name="DepthScale" value="0.01" />
</material>
